# Environment Configuration for Bose RAG System
# Copy this file to .env and customize as needed

# ===================================
# CORE MODEL CONFIGURATION
# ===================================
OLLAMA_MODEL=phi
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TEMPERATURE=0.2
OLLAMA_NUM_THREADS=4
OLLAMA_NUM_GPU=0

# ===================================
# PROCESSING CONFIGURATION
# ===================================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=5

# ===================================
# EMBEDDING CONFIGURATION
# ===================================
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ===================================
# GENERATION CONFIGURATION
# ===================================
MAX_TOKENS=100
RESPONSE_TIMEOUT=120

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=INFO

# ===================================
# PHASE 1 ENHANCEMENTS (Optional)
# ===================================

# Hybrid Search: Combines vector (semantic) + BM25 (keyword) search
# Benefits: Better exact matching for model numbers, specs, technical terms
# Cost: Slightly slower initial indexing, minimal query overhead
ENABLE_HYBRID_SEARCH=true
HYBRID_SEARCH_ALPHA=0.5  # 0.5 = equal weight, 0.7 = prefer semantic, 0.3 = prefer keyword

# Query Caching: LRU cache for repeated queries
# Benefits: 99%+ speedup for repeated queries, better UX
# Cost: ~10-50MB memory for 100 cached queries
ENABLE_QUERY_CACHE=true
CACHE_MAX_SIZE=100
CACHE_TTL_SECONDS=3600  # 1 hour

# Confidence Scoring: Reliability indicators for answers
# Benefits: Users know when to verify information, better trust
# Cost: Minimal (<0.1s per query)
ENABLE_CONFIDENCE_SCORING=true

# Metrics Dashboard: Performance tracking and monitoring
# Benefits: Insights into system performance, identify bottlenecks
# Cost: ~5-10MB memory for 100 queries
ENABLE_METRICS=true
METRICS_WINDOW_SIZE=100

# ===================================
# QUICK PRESETS
# ===================================
# For interviews/demos (enable all):
#   ENABLE_HYBRID_SEARCH=true
#   ENABLE_QUERY_CACHE=true
#   ENABLE_CONFIDENCE_SCORING=true
#   ENABLE_METRICS=true
#
# For production (recommended):
#   ENABLE_HYBRID_SEARCH=true
#   ENABLE_QUERY_CACHE=true
#   ENABLE_CONFIDENCE_SCORING=true
#   ENABLE_METRICS=true
#
# For development (minimal):
#   All enhancements=false
